        <TextBox x:Name="emailField" HorizontalAlignment="Left" Margin="197,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="phoneField" HorizontalAlignment="Left" Margin="355,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Submeter" HorizontalAlignment="Left" Margin="242,113,0,0" VerticalAlignment="Top" Height="43" Width="130" RenderTransformOrigin="0.508,0.504" Click="OnSubmeterClick"/>
